<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/rl_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        >

        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sp_10"
            android:layout_marginTop="@dimen/sp_12"
            android:layout_marginEnd="@dimen/sp_10"
            android:fontFamily="@font/opensans_regular"
            android:text="Q 1. What is your name?"
            android:textColor="@color/color_navy_blue"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile" />


        <RelativeLayout
            android:layout_below="@+id/txtQuestion"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="gone"


            android:id="@+id/ans_parent">
            <EditText
                android:id="@+id/et_ansswer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/opensans_regular"
                android:hint="Write your answer"
                android:padding="@dimen/dimen_10dp"
                android:elevation="3dp"
                android:background="@drawable/rectaggle_gray_shap"
                android:gravity="start"
                android:focusable="true"

                android:layout_gravity="top"
                 android:maxLength="1000"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/et_another_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:layout_below="@+id/txtQuestion"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:fontFamily="@font/opensans_regular"
            android:hint="Write your answer"
            android:padding="@dimen/dimen_10dp"
            />


    </RelativeLayout>
</RelativeLayout>