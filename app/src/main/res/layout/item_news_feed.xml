    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shadow_search_user">


        <LinearLayout
            android:id="@+id/layout_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="35dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.05"
                    android:background="@color/colorWhite"
                    android:backgroundTint="@color/colorWhite"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/black" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserNameForPost"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/txtDateForPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_userprofile"
                    app:srcCompat="@drawable/ic_more_vert_black_18dp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnReportPost"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/rectangle_blue"
                        android:text="Report"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tagRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="13dp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txtPostInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="8dp"
                android:layout_toLeftOf="@+id/btnMemories"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:id="@+id/txtPostInfoColor"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_color"
                android:fontFamily="@font/opensans_regular"
                android:padding="@dimen/dp_12"
                android:text="kldkfldkfdkfdlfkd"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_15"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtPostInfoWithoutPadding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/opensans_regular"
                    android:text="kldkfldkfdkfdlfkd"
                    android:layout_toLeftOf="@+id/btnMemories"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_15"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/btnMemories"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrow_right"
                    android:text="View Memories"
                    android:layout_marginRight="@dimen/dp_5"
                    android:tint="@color/colorPrimary"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/viewPagerParent"
                android:layout_width="fill_parent"
                android:layout_height="270dp"

                android:visibility="gone">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgMediaPost"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/camera_placeholder"

                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/parentVideoView"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="6dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/videoView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/video_bg" />

                <ImageView
                    android:id="@+id/btnPlayVideo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play_audio"
                    android:tint="@color/colorWhite" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/audioView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/audioPlay"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:src="@drawable/audio_background" />

<!--                android:src="@drawable/background_icon_audio"-->

                <ImageView
                    android:id="@+id/btnPlayAudio"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_audio_background"
                    android:tint="@color/colorWhite" />

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:visibility="gone" />

            </RelativeLayout>




            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_like_post"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_like_post"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/ic_unlike_heart" />

                    <TextView
                        android:id="@+id/txtPostLikeNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6sp"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/opensans_regular"
                        android:paddingLeft="2dp"
                        android:paddingRight="7dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCommentPost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/ic_comment" />

                    <TextView
                        android:id="@+id/txtPostCommentNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6sp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/opensans_regular" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_share_post"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/ic_share_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6sp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="12"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</layout>
